{
  "manifest_version": 2,

  "name": "Aazan Notifier",
  "description": "This extension pops up a notification when its time for Aazan",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
